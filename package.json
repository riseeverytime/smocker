{
  "private": true,
  "scripts": {
    "start": "concurrently --kill-others \"yarn:start:tsc\" \"yarn:start:parcel\"",
    "start:parcel": "parcel watch --out-dir ./build --public-url /assets ./client/src/index.html",
    "start:tsc": "tsc -p . --noEmit --watch",
    "build": "NODE_ENV=production parcel build --out-dir ./build --public-url /assets ./client/src/index.html",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write 'client/**/*.{ts,tsx,html,scss,json}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:generate": "node docs/refresh-screenshots.js",
    "predocs:generate": "yarn add --peer --pure-lockfile puppeteer"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@hot-loader/react-dom": "^16.10.2",
    "@types/classnames": "^2.2.9",
    "@types/codemirror": "0.0.95",
    "@types/jest": "^25.2.1",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.153",
    "@types/luxon": "^1.15.2",
    "@types/node": "^14.0.5",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.0",
    "@types/redux": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "axios": "^0.19.2",
    "babel-plugin-import": "^1.13.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-react": "^7.20.0",
    "husky": ">=1",
    "jest": "^26.0.1",
    "lint-staged": ">=8",
    "parcel": "^1.12.4",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "prettier": "2.0.5",
    "react-hot-loader": "^4.12.15",
    "redux-devtools-extension": "^2.13.8",
    "sass": "^1.23.0",
    "ts-jest": "^26.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.8.3",
    "vuepress": "^1.2.0",
    "vuepress-plugin-fulltext-search": "^2.0.3",
    "vuepress-plugin-mermaidjs": "^1.2.0",
    "vuepress-plugin-one-click-copy": "^1.0.1",
    "vuepress-plugin-zooming": "^1.1.7"
  },
  "dependencies": {
    "@ant-design/icons": "^4.1.0",
    "antd": "^4.2.5",
    "classnames": "^2.2.6",
    "codemirror": "^5.49.0",
    "fp-ts": "^2.1.1",
    "io-ts": "^2.0.1",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "luxon": "^1.19.3",
    "react": "^16.10.2",
    "react-codemirror2": "^7.2.0",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-use-localstorage": "^3.2.2",
    "redux": "^4.0.4",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.5.3",
    "typesafe-actions": "^5.1.0"
  },
  "peerDependencies": {
    "puppeteer": "^3.2.0"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,html,scss,json}": "prettier --write"
  }
}
