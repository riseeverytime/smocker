{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "client/src"
    ]
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
