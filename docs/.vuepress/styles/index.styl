$border-color = #bbb

.theme-default-content:not(.custom)
  max-width: 1100px
  text-align: justify

  .row, .column
    display: flex
    &.wrap
      flex-wrap: wrap
    &.around-justified
      justify-content: space-around
    &.justified
      justify-content: space-between
    &.center-justified
      justify-content: center
    &.start-align
      align-items: flex-start
    &.center-align
      align-items: center
    &.end-align
      align-items: flex-end

  .row
    flex-direction: row

  .column
    flex-direction: column

  .text-center
    text-align: center

  img, .figure
    border: 1px solid $border-color
    border-radius: 3px
    box-shadow: 10px 10px 5px -4px rgba(0, 0, 0, .50)

  .figure
    box-shadow: 5px 5px 5px -4px rgba(0, 0, 0, .50)
    display: flex
    flex-direction: column
    margin: .5em
    max-width: 45%
    @media screen and (max-width: 1024px)
       max-width: 100%
    padding: .5em

    div
      flex: auto
      svg
        height: 100%
        width: 100%

#message-container .message .text
  height: 22px
